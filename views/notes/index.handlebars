{{#each notes}}
<div class="card card-body mb-2">
  <h4>{{title}}</h4>
  <p>{{text}}</p>
  <a href="/notes/edit/{{_id}}" class="btn btn-dark btn-block mb-2">Thay đổi</a>
  <form action="/notes/{{_id}}?_method=DELETE" method="note">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Xóa" class="btn btn-danger btn-block">
  </form>
</div>
{{else}}
<p>Chưa có ghi chú nào</p>
{{/each}}