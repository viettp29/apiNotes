<div class="card card-body">
  <h3>Chỉnh sửa ghi chú</h3>
  <form action="/notes/{{note._id}}?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="title">Tiêu đề</label>
      <input type="text" class="form-control" name="title" required value="{{note.title}}">
    </div>
    <div class="form-group">
      <label for="text">Nội dung</label>
      <textarea name="text" class="form-control" required>{{note.text}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Chấp nhận thay đổi</button>
  </form>
</div>